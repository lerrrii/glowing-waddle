{
  "$schema": "../dynamic-compose-schema.json",
  "services": [
    {
      "name": "czstreams",
      "build": {
        "context": "${APP_DATA_DIR}/data",
        "dockerfile": "Dockerfile"
      },
      "isMain": true,
      "internalPort": 52932,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/app"
        }
      ],
      "environment": {
        "PORT": "52932"
      },
      "addPorts": [
        {
          "containerPort": 52932,
          "hostPort": "${APP_PORT}",
          "tcp": true
        }
      ],
      "restart": "unless-stopped"
    }
  ]
}
