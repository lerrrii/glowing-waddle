{
  "$schema": "../dynamic-compose-schema.json",
  "services": [
    {
      "name": "czstreams",
      "image": "node:23",
      "isMain": true,
      "internalPort": 52932,
      "workingDir": "/app",
      "command": "sh -c 'npm install && npm start'",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/app"
        },
        {
          "hostPath": "${APP_DATA_DIR}/node_modules",
          "containerPath": "/app/node_modules"
        }
      ],
      "environment": {
        "PORT": "52932"
      },
      "restart": "unless-stopped"
    }
  ]
}
