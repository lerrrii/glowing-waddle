{
  "$schema": "../app-info-schema.json",
  "name": "Watchtower+",
  "id": "watchtower",
  "available": true,
  "exposable": true,
  "dynamic_config": true,
  "port": 8080,
  "tipi_version": 1,
  "version": "latest",
  "categories": ["utilities", "automation", "security"],
  "author": "containrrr + Runtipi community",
  "description": "Auto-update Docker containers with cron, time-zone, notifications and optional UI.",
  "short_desc": "Docker auto-updater with notifications.",
  "source": "https://github.com/containrrr/watchtower",
  "form_fields": [
    {
      "type": "text",
      "label": "Label selector",
      "hint": "Only containers with this label=true will be watched; leave empty to watch all.",
      "env_variable": "WATCHTOWER_LABEL_ENABLE",
      "default": "runtipi.managed=true"
    },
    {
      "type": "text",
      "label": "Cron schedule (6 fields)",
      "placeholder": "0 0 3 * * *",
      "env_variable": "WATCHTOWER_SCHEDULE",
      "default": "0 0 3 * * *"
    },
    {
      "type": "boolean",
      "label": "Cleanup old images",
      "env_variable": "WATCHTOWER_CLEANUP",
      "default": true
    },
    {
      "type": "boolean",
      "label": "Rollback on failure",
      "env_variable": "WATCHTOWER_ROLLBACK",
      "default": false
    },
    {
      "type": "text",
      "label": "Notification type",
      "hint": "email, slack, msteams, gotify or leave empty",
      "env_variable": "WATCHTOWER_NOTIFICATIONS",
      "default": ""
    },
    {
      "type": "text",
      "label": "Extra Watchtower args",
      "hint": "e.g. --include-stopped --rolling-restart",
      "env_variable": "WATCHTOWER_EXTRA_ARGS",
      "default": ""
    }
  ],
  "supported_architectures": ["amd64", "arm64"],
  "created_at": 1740000000000,
  "updated_at": 1740000000000
}
