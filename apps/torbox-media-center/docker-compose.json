{
  "$schema": "../dynamic-compose-schema.json",
  "services": [
    {
      "name": "torbox-media-center",
      "image": "anonymoussystems/torbox-media-center:main",
      "isMain": true,
      "environment": {
        "PUID": "${PUID-1000}",
        "PGID": "${PGID-1000}",
        "TZ": "${TZ-Europe/Prague}",
        "TORBOX_API_KEY": "${TORBOX_API_KEY}",
        "MOUNT_METHOD": "${MOUNT_METHOD-strm}",
        "MOUNT_PATH": "${MOUNT_PATH-/torbox}",
        "MOUNT_REFRESH_TIME": "${MOUNT_REFRESH_TIME-normal}",
        "ENABLE_METADATA": "${ENABLE_METADATA-false}"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/torbox",
          "containerPath": "/torbox"
        }
      ],
      "extraOptions": {
        "stdin_open": true,
        "tty": true
      }
    }
  ]
}
