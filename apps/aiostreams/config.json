{
  "$schema": "../app-info-schema.json",
  "id": "aiostreams",
  "name": "AIOStreams",
  "version": "latest",
  "tipi_version": 1,
  "available": true,
  "exposable": true,
  "dynamic_config": true,
  "port": 3000,
  "categories": ["media","ai"],
  "author": "viren070",
  "description": "Aggregate and customize multiple Stremio addons and debrid services in one interface.",
  "short_desc": "Unified Stremio addon with filtering, sorting, and proxy support.",
  "source": "https://github.com/Viren070/AIOStreams",
  "supported_architectures": ["amd64","arm64"],
  "form_fields": [
    {"type":"text","label":"Addon Name","env_variable":"ADDON_NAME","default":"AIOStreams","placeholder":"AIOStreams"},
    {"type":"text","label":"Addon ID","env_variable":"ADDON_ID","default":"aiostreams.my-domain.com","placeholder":"aiostreams.my-domain.com"},
    {"type":"boolean","label":"Deterministic Addon ID","env_variable":"DETERMINISTIC_ADDON_ID","default":true},
    {"type":"number","label":"Port","env_variable":"PORT","default":3000},
    {"type":"password","label":"Secret Key","env_variable":"SECRET_KEY","default":""},
    {"type":"text","label":"API Key","env_variable":"API_KEY","default":""},
    {"type":"boolean","label":"Show Dice Emoji","env_variable":"SHOW_DIE","default":false},
    {"type":"boolean","label":"Log Sensitive Info","env_variable":"LOG_SENSITIVE_INFO","default":true},
    {"type":"number","label":"Default Timeout (ms)","env_variable":"DEFAULT_TIMEOUT","default":15000},
    {"type":"number","label":"Max Addons","env_variable":"MAX_ADDONS","default":15},
    {"type":"number","label":"Max Keyword Filters","env_variable":"MAX_KEYWORD_FILTERS","default":30},
    {"type":"number","label":"Max Regex Sort Patterns","env_variable":"MAX_REGEX_SORT_PATTERNS","default":30},
    {"type":"number","label":"Max Movie Size (bytes)","env_variable":"MAX_MOVIE_SIZE","default":161061273600},
    {"type":"number","label":"Max Episode Size (bytes)","env_variable":"MAX_EPISODE_SIZE","default":161061273600},
    {"type":"url","label":"MediaFlow URL","env_variable":"MEDIAFLOW_URL","default":"https://mediafusion.elfhosted.com/"},
    {"type":"number","label":"MediaFlow IP Timeout (ms)","env_variable":"MEDIAFLOW_IP_TIMEOUT","default":30000},
    {"type":"url","label":"StremThru URL","env_variable":"DEFAULT_STREMTHRU_URL","default":""},
    {"type":"number","label":"StremThru Timeout (ms)","env_variable":"STREMTHRU_TIMEOUT","default":30000},
    {"type":"url","label":"Torrentio URL","env_variable":"TORRENTIO_URL","default":"https://torrentio.strem.fun/"},
    {"type":"url","label":"Orion Addon URL","env_variable":"ORION_STREMIO_ADDON_URL","default":""},
    {"type":"url","label":"Peerflix URL","env_variable":"PEERFLIX_URL","default":""},
    {"type":"url","label":"Torbox Addon URL","env_variable":"TORBOX_STREMIO_URL","default":""},
    {"type":"url","label":"Easynews URL","env_variable":"EASYNEWS_URL","default":""},
    {"type":"url","label":"Debridio URL","env_variable":"DEBRIDIO_URL","default":""},
    {"type":"text","label":"DMM Cast URL","env_variable":"DEFAULT_DMM_CAST_URL","default":""},
    {"type":"text","label":"Stremio GDrive Addon URL","env_variable":"DEFAULT_STREMIO_GDRIVE_URL","default":""}
  ]
}
