{
  "$schema": "../app-info-schema.json",
  "id": "dockcheck",
  "name": "Dockcheck",
  "version": "0.6.4",
  "available": true,
  "exposable": true,
  "dynamic_config": true,
  "categories": ["utilities", "devops"],
  "description": "Automate Docker image update checks, selective updates, notifications and auto-prune.",
  "short_desc": "CLI for Docker image updates",
  "author": "mag37",
  "source": "https://github.com/mag37/dockcheck",
  "created_at": 1742179200000,
  "updated_at": 1742179200000,
  "form_fields": [
    { "type": "boolean", "label": "Auto-mode (no interaction)", "env_variable": "AUTO_MODE" },
    { "type": "boolean", "label": "Notify on updates", "env_variable": "NOTIFY" },
    { "type": "boolean", "label": "Auto-prune after updates", "env_variable": "AUTO_PRUNE" },
    { "type": "boolean", "label": "Auto self-update dockcheck.sh", "env_variable": "AUTO_SELF_UPDATE" },
    { "type": "number",  "label": "Max async checks", "placeholder": "1-32", "env_variable": "MAX_ASYNC" },
    { "type": "number",  "label": "Min age of images to update (days)", "placeholder": "0", "env_variable": "DAYS_OLD" },
    { "type": "text",    "label": "Exclude containers (comma)", "env_variable": "EXCLUDE_CONTAINERS" },
    { "type": "text",    "label": "Include only label", "env_variable": "ONLY_LABEL" },
    { "type": "text",    "label": "Additional dockcheck flags", "env_variable": "EXTRA_FLAGS" },
    { "type": "text",    "label": "Traefik router hostnames (comma)", "env_variable": "TRAEFIK_HOSTS" }
  ]
}