{
  "$schema": "../app-info-schema.json",
  "name": "Watchtower Auto-Updater",
  "id": "watchtower",
  "version": "latest",
  "available": true,
  "exposable": true,
  "dynamic_config": true,
  "port": 8080,
  "categories": ["utilities","infrastructure","devops"],
  "description": "Automatically pulls and restarts Docker containers when new image versions are released.",
  "short_desc": "Automated Docker image updater for all Runtipi apps.",
  "author": "containrrr / Community",
  "source": "https://github.com/containrrr/watchtower",
  "form_fields": [
    {
      "type": "text",
      "label": "Schedule (cron)",
      "env_variable": "WATCHTOWER_SCHEDULE",
      "default": "0 2 * * *",
      "placeholder": "0 2 * * *"
    },
    {
      "type": "boolean",
      "label": "Enable Cleanup of Old Images",
      "env_variable": "WATCHTOWER_CLEANUP",
      "default": true
    },
    {
      "type": "boolean",
      "label": "Enable Label Filtering",
      "env_variable": "WATCHTOWER_LABEL_ENABLE",
      "default": true
    },
    {
      "type": "boolean",
      "label": "Expose Web UI",
      "env_variable": "WATCHTOWER_UI",
      "default": false
    }
  ],
  "supported_architectures": ["arm64","amd64"],
  "created_at": 1710000000000,
  "updated_at": 1710000000000
}
