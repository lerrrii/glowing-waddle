{
  "$schema": "../app-info-schema.json",
  "name": "Watchtower",
  "available": true,
  "exposable": true,
  "dynamic_config": true,
  "port": 8080,
  "id": "watchtower",
  "tipi_version": 1,
  "version": "latest",
  "categories": ["utilities", "security"],
  "description": "Automatic Docker container updater for Runtipi-managed services.",
  "short_desc": "Watchtower auto-updates Docker containers.",
  "author": "containrrr",
  "source": "https://github.com/containrrr/watchtower",
  "form_fields": [
    {
      "type": "text",
      "label": "Label selector",
      "placeholder": "runtipi.managed=true",
      "env_variable": "WATCHTOWER_LABELS",
      "default": "runtipi.managed=true"
    },
    {
      "type": "text",
      "label": "Cron schedule",
      "placeholder": "0 3 * * *",
      "env_variable": "WATCHTOWER_SCHEDULE",
      "default": "0 3 * * *"
    },
    {
      "type": "boolean",
      "label": "Cleanup old images",
      "env_variable": "WATCHTOWER_CLEANUP",
      "default": true
    },
    {
      "type": "boolean",
      "label": "Rollback on failure",
      "env_variable": "WATCHTOWER_ROLLBACK",
      "default": false
    },
    {
      "type": "boolean",
      "label": "Expose UI",
      "env_variable": "WATCHTOWER_UI",
      "default": false
    }
  ],
  "supported_architectures": ["amd64", "arm64"],
  "created_at": 1740000000000,
  "updated_at": 1740000000000
}
