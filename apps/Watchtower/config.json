{
  "name": "Watchtower",
  "id": "watchtower",
  "available": true,
  "exposable": false,
  "dynamic_config": true,
  "port": 8080,
  "tipi_version": 1,
  "version": "latest",
  "categories": ["utilities", "automation"],
  "description": "Watchtower automatically updates running Docker containers by monitoring for new image versions and restarting containers accordingly.",
  "short_desc": "Automated Docker container updater.",
  "author": "containrrr",
  "source": "https://github.com/containrrr/watchtower",
  "form_fields": [
    {
      "type": "text",
      "label": "Update Interval (seconds)",
      "placeholder": "300",
      "env_variable": "WATCHTOWER_POLL_INTERVAL"
    },
    {
      "type": "boolean",
      "label": "Include Stopped Containers",
      "env_variable": "WATCHTOWER_INCLUDE_STOPPED",
      "default": false
    },
    {
      "type": "boolean",
      "label": "Cleanup Old Images",
      "env_variable": "WATCHTOWER_CLEANUP",
      "default": true
    },
    {
      "type": "boolean",
      "label": "Enable Notifications",
      "env_variable": "WATCHTOWER_NOTIFICATIONS",
      "default": false
    },
    {
      "type": "text",
      "label": "Notification Email",
      "placeholder": "user@example.com",
      "env_variable": "WATCHTOWER_NOTIFICATION_EMAIL"
    }
  ],
  "supported_architectures": ["arm64", "amd64"],
