{
  "services": [
    {
      "name": "watchtower",
      "image": "containrrr/watchtower:latest",
      "isMain": true,
      "internalPort": 8080,
      "environment": {
        "WATCHTOWER_POLL_INTERVAL": "${WATCHTOWER_POLL_INTERVAL-300}",
        "WATCHTOWER_INCLUDE_STOPPED": "${WATCHTOWER_INCLUDE_STOPPED-false}",
        "WATCHTOWER_CLEANUP": "${WATCHTOWER_CLEANUP-true}",
        "WATCHTOWER_NOTIFICATIONS": "${WATCHTOWER_NOTIFICATIONS-false}",
        "WATCHTOWER_NOTIFICATION_EMAIL": "${WATCHTOWER_NOTIFICATION_EMAIL-}"
      },
      "volumes": [
        {
          "hostPath": "/var/run/docker.sock",
          "containerPath": "/var/run/docker.sock"
        }
      ],
      "logging": {
        "driver": "json-file",
        "options": {
          "max-size": "10m"
        }
      }
    }
  ]
}
